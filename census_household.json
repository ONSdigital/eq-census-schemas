                                    "definitions": [
                                        {
                                            "title": "What is a Communal Establishment?",
                                            "content": [
                                                {
                                                    "description": "A communal establishment is an establishment providing managed residential accommodation. ‘Managed’ in this context means full-time or part-time supervision of the accommodation."
                                                }
                                            ]
                                        }
                                    ],
                                    "type": "General",
                                    "answers": [
                                        {
                                            "id": "confirm-establishment-answer",
                                            "mandatory": false,
                                            "options": [
                                                {
                                                    "label": "Yes, this is a communal establishment",
                                                    "value": "Yes"
                                                },
                                                {
                                                    "label": "No, this is a private or family home",
                                                    "value": "No, this ia a private or family home"
                                                }
